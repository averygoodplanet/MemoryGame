include ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-8.columns
      h2.subheader Memory Game
    .small-4.columns
      form#userInput(action='', method='post')
        fieldset
          legend New Game
          .row
            .small-12.columns
              mixin field(8, 'name', 'Name', null, 'Enter name', true)
              mixin field(4, 'numberPairs', '# Pairs', 8, null, true)
          .row.
            .small-9.columns
            .small-3.columns
              button.radius.success.small.expand(type='submit') Start Game
